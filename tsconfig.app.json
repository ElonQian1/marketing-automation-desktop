{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@adb/*": [
        "src/domain/adb/*",
        "src/application/*",
        "src/infrastructure/repositories/*"
      ],
      "@ai/*": ["src/modules/ai/*"],
      "@contact/*": ["src/modules/contact-import/*"],
      "@prospecting/*": ["src/modules/precise-acquisition/*"],
      "@script/*": ["src/modules/smart-script-management/*"],
      "@universal/*": ["src/modules/universal-ui/*"],
      "@shared/*": ["src/shared/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    // 显式排除 JSX-capable shim，防止重复实现与冲突
    "src/components/universal-ui/views/visual-view/hooks/useParsedVisualElements.tsx",
    "src/**/*_old.ts",
    "src/**/*_old.tsx",
    "src/**/*.backup*.tsx",
    "src/**/*.backup*.ts",
    // 兼容另一类备份后缀（.tsx.backup / .ts.backup）
    "src/**/*.tsx.backup",
    "src/**/*.ts.backup",
    // 联系人相关（未纳入本轮工作）
    "src/components/contact/**",
    "src/pages/contact-management/**",
    "src/pages/ContactManagementPage*",
    "src/pages/ContactAutomationPage*",
    "src/pages/PermissionTestPage.tsx",
    "src/utils/ContactImportDebugger.ts",
    "src/pages/TestCommandFix.tsx",
    "src/components/AntDesignDemo.tsx",
    "src/components/debug/QuickAppSelectorTest.tsx",
    "src/components/SmartVcfImporter.tsx",
    "src/pages/ContactAutomationPage_sindre.tsx",
    "src/pages/ContactManagementPage_Enhanced.tsx",
    "src/modules/contact-automation/**",
    "src/utils/typeAdapters.ts",
    // 联系人导入工作台旧变体（仅保留主实现 ContactImportWorkbench.tsx）
    "src/modules/contact-import/ui/ContactImportWorkbenchClean.tsx",
    "src/modules/contact-import/ui/ContactImportWorkbenchRefactored.tsx",
    "src/modules/contact-import/ui/ContactImportWorkbenchResizable.tsx",
    "src/modules/contact-import/ui/ContactImportWorkbenchSimple.tsx",
    "src/modules/contact-import/ui/ContactImportWorkbench.tsx.backup",
    "src/modules/contact-import/ui/ContactImportWorkbench.backup.tsx",
    // 智能导航查找演示
    "src/components/smart-navigation-finder/**",
    "src/pages/SmartNavigationTestPage.tsx",
    // 联系人自动化旧页面（会隐式引入 contact 组件）
    "src/pages/ContactAutomationPage*.tsx",
    // 循环拖拽实验模块（当前未纳入主流程）
    "src/modules/loop-drag-integration/**",
    // 智能策略系统（当前未纳入本轮工作，避免类型冲突）
    "src/modules/intelligent-strategy-system/**",
    // 排除 txt-import hooks 目录下的所有 .ts（仅编译 .tsx 实现）
    "src/modules/contact-import/ui/components/txt-import/hooks/**/*.ts",
    // 排除重复的 .ts 符号占位文件（存在同名 .tsx 实现）
    "src/modules/contact-import/ui/components/txt-import/logic/confirmBulkDelete.ts",
    // 排除旧的单体实现（避免与新模块重复导出/类型冲突）
    "src/modules/contact-import/ui/components/TxtImportRecordsManager.tsx",
    // 统一视图演示（示例数据，不参与本轮验证）
    "src/components/unified-view/**",
    // 联系人组件整包（旧模块，当前不纳入本轮类型检查）
    "src/components/contact/**",
    // ADB 授权向导（未纳入本轮工作）
    "src/pages/adb/auth/**",
    "src/pages/adb/AdbCenterPage.tsx",
    // 临时/变体组件（避免被纳入类型检查引发噪音）
    "src/**/*_FIXED.tsx",
    "src/**/*_FIXED.ts",
    "src/**/*_BACKUP.tsx",
    "src/**/*_BACKUP.ts",
    "src/**/*_SIMPLE.tsx",
    "src/**/*_SIMPLE.ts",
    "src/**/*_ENHANCED.tsx",
    "src/**/*_ENHANCED.ts",
    // 示例与演示入口
    "src/examples/**",
    "src/pages/ComprehensiveAdbPage.tsx",
    // 其他可能的间接入口
    "src/pages/ContactAutomationPage*.tsx",
    // 汇总导出可能引入被排除模块
    "src/components/index.ts",
    // 彻底排除联系人旧演示入口，防止间接引入造成类型噪音
    "src/components/contact/index.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
