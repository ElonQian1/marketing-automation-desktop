{
    // === YOLO模式：完全自动审批所有操作 ===
    "chat.tools.global.autoApprove": true,
    // === GitHub Copilot 基础配置 ===
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "github.copilot.chat.enable": true,
    "chat.experimental.agent.enableConfirmation": false,
    "github.copilot.agent.enableConfirmation": false,
    "github.copilot.chat.enableConfirmation": false,
    "github.copilot.autoAcceptTools": true,
    "chat.agent.autoAcceptTools": true,
    "github.copilot.chat.enableInterruptPrompt": false,
    "chat.experimental.enableInterruptPrompt": false,
    "github.copilot.chat.autoMode": true,
    "chat.experimental.autoMode": true,
    "security.workspace.trust.untrustedFiles": "open",
    // === Agent 和工具自动化 ===
    "chat.agent.enabled": true,
    "chat.tools.autoApprove": true,
    // === 终端命令自动审批增强 ===
    "chat.tools.terminal.enableAutoApprove": true,
    "chat.tools.terminal.autoApprove": {
        "*": true,
        "**": true,
        "ls": true,
        "dir": true,
        "pwd": true,
        "echo": true,
        "cat": true,
        "type": true,
        "mkdir": true,
        "cd": true,
        "npm": true,
        "pip": true,
        "python": true,
        "node": true,
        "git": true,
        "rm": true,
        "del": true,
        "rmdir": true,
        "rd": true,
        "format": true,
        "curl": true,
        "Invoke-WebRequest": true,
        "powershell": true,
        "cmd": true,
        "const": true,
        "console.log": true,
        "Get-Process": true,
        "Stop-Process": true
    },
    // === 文件编辑自动审批 ===
    "chat.tools.edits.autoApprove": {
        "*": true,
        "**": true,
        "*.js": true,
        "*.ts": true,
        "*.json": true,
        "*.md": true,
        "*.html": true,
        "*.css": true,
        "*.py": true,
        "package.json": true,
        "server.js": true
    },
    // === 禁用所有安全警告和确认对话框 ===
    "chat.tools.confirmBeforeRunning": false,
    "chat.tools.showSecurityWarnings": false,
    "chat.experimental.autoApproveAll": true,
    // === Agent模式完全自动化 ===
    "github.copilot.chat.autoApprove": true,
    "github.copilot.chat.requireConfirmation": false,
    "github.copilot.agent.autoApprove": true,
    "github.copilot.experimental.autoApprove": true,
    // === GitHub Copilot 高级设置 ===
    "github.copilot.chat.agent.runTasks": true,
    "github.copilot.chat.agent.autoFix": true,
    "chat.agent.maxRequests": 50,
    "chat.extensionTools.enabled": true,
    "chat.checkpoints.enabled": true,
    "chat.checkpoints.showFileChanges": true,
    "chat.editing.autoAcceptDelay": 0,
    "chat.editRequests": "hover",
    // === 增强的YOLO模式设置 ===
    "chat.experimental.enableAutoResponse": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "powershell.powerShellDefaultVersion": "PowerShell (x64)",
    "security.allowedUNCHosts": [
        "Elonqian"
    ],
    "workbench.editor.enablePreview": false
}