{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/**/*_old.ts",
    "src/**/*_old.tsx",
    // 暂时排除未迁移/示例模块，避免干扰当前功能的类型检查
    "src/examples/**",
    "src/components/element-xml-hierarchy/**",
    "src/components/element-name-editor/**",
    "src/components/unified-view/**",
    "src/components/smart-navigation-finder/**",
    "src/modules/loop-drag-integration/**",
    "src/pages/adb/auth/**",
    "src/pages/ContactAutomationPage*",
    "src/pages/ContactImportPage*",
    "src/pages/contact-management/**",
    "src/components/contact/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
