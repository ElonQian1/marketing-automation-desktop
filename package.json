{
  "name": "employee-drainage-tool",
  "private": true,
  "version": "0.2.0",
  "description": "员工引流工具 - 基于 Tauri + React 的桌面应用",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:5321": "cross-env VITE_PORT=5321 vite",
    "dev:poll": "cross-env WATCH_MODE=poll CHOKIDAR_USEPOLLING=1 FORCE_POLLING=1 vite",
    "dev:local": "cross-env WATCH_MODE=native DISABLE_POLLING=1 vite",
    "build": "vite build",
    "build-with-ts": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev:5321": "cross-env VITE_PORT=5321 tauri dev",
    "tauri:poll": "cross-env WATCH_MODE=poll CHOKIDAR_USEPOLLING=1 FORCE_POLLING=1 tauri dev",
    "type-check": "tsc -p tsconfig.app.json --noEmit",
    "scan:executor": "node scripts/refactor/scan_executor_functions.mjs",
    "check:legacy-contacts": "node scripts/check-legacy-contacts.js",
    "clean:legacy-contacts": "node scripts/remove-legacy-contacts.mjs",
    "validate:brand": "node scripts/validate-brand-config.mjs",
    "scan:overrides": "node scripts/scan-style-overrides.mjs",
    "quality:gate": "node scripts/quality-gate.mjs",
    "prepare": "husky install",
    "lint": "eslint --ext .ts,.tsx src",
    "dep:check": "depcruise --config .dependency-cruiser.cjs src --exclude '^src-tauri'",
    "headers:check": "node scripts/check_headers.cjs",
    "quality:check": "npm run scan:overrides && npm run type-check && npm run check:adapters",
    "check:adapters": "node scripts/check-adapter-usage.js",
    "check:hardcoded": "node scripts/check-hardcoded-styles.js",
    "check:contrast": "node scripts/check-color-contrast.js",
    "setup:scrcpy": "pwsh -ExecutionPolicy Bypass -File scripts/setup-scrcpy.ps1",
    "verify:scrcpy": "pwsh -ExecutionPolicy Bypass -File scripts/verify-scrcpy.ps1",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "check:unused": "npx ts-prune --error || echo 'ts-prune not available, install with: npm install -D ts-prune'",
    "check:dup": "npx jscpd src --min-lines 3 --min-tokens 50 --threshold 1 || echo 'jscpd not available, install with: npm install -D jscpd'"
  },
  "scriptsExtra": {},
  "cleaners": {},
  "dependencies": {
    "@ant-design/icons": "^6.0.1",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@tauri-apps/api": "2.8.0",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.1",
    "@types/react-grid-layout": "^1.3.5",
    "antd": "^5.27.3",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "framer-motion": "^12.23.22",
    "immer": "^10.1.3",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.22",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-grid-layout": "^1.5.2",
    "react-router-dom": "^7.8.2",
    "tailwind-merge": "^3.3.1",
    "xmldom": "^0.6.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "@playwright/test": "^1.55.1",
    "@tauri-apps/cli": "2.8.4",
    "@testing-library/react": "^16.0.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "5.0.2",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.0.0",
    "eslint-plugin-boundaries": "^3.4.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.27",
    "tailwindcss": "4.1.13",
    "ts-prune": "^0.10.3",
    "typescript": "^5.0.2",
    "vite": "7.1.4",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "node scripts/check_headers.cjs"
    ]
  }
}
