{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "员工引流工具",
  "version": "0.2.0",
  "identifier": "com.example.employeegui",
  "build": {
    "beforeDevCommand": "npm run dev:5321",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5321"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "resources": ["../platform-tools"],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "员工引流工具",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:default",
            "dialog:default"
          ]
        }
      ]
    }
  }
}
